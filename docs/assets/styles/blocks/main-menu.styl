.main-menu
    &__icon
        margin-right 0.3em

        &--1
            sprite("icon-search")

        &--2
            sprite("icon-video")

        &--3
            sprite("icon-upload")

        &--4
            sprite("icon-camera")

    &__item-text
        link-decoration(currentColor)

    &__item
        &:hover
        &.is-active
            color orange

        &.is-active
            & ^[0]
                &__item-text
                    link-decoration(none)


    /*
       Adaptive
       ========================================================================== */

    +above(bp-mobile-menu)
        &__item
            margin-right 1em

            &:last-child
                margin-right 0

    +below(bp-mobile-menu)
        display flex
        flex-direction column
        align-items flex-start
        padding-left site-paddings

        &__item
            padding 0.4em 0 0.4em rel-size(40px)
            position relative

        &__icon
            position absolute
            left 0
            top rel-size(10px)